@model Menu.Models.Reporte3_general

<form>
    <div class="panel panel-default" style="border-color:darkblue; margin-bottom:1px; padding-bottom:1em; margin-top:1px; padding-top:1em;">
        <div class="panel-body">
            <table class="table" style="border-color:darkblue; margin-bottom:0px; padding-bottom:0em; margin-top:0px; padding-top:0em;">
                <thead>
                    <tr>
                        <th scope="col">Fecha de solicitud</th>
                        <th scope="col">Cuenta</th>
                        <th scope="col">Nombre de usuario</th>
                        <th scope="col">Unidad administrativa</th>
                        <th scope="col">Tipo de solicitud</th>
                        <th scope="col">Detalles</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.List_Tabla)
                    {
                    <tr class="renglon " style="font-stretch: condensed;">
                        <td>@item.Fecha_Solicitud</td>
                        <td>@item.Cuenta</td>
                        <td>@item.Nombre_Usuario</td>
                        <td>@item.Direccion_General_Actual</td>
                        <td>@item.Tipo_Solicitud</td>
                        <td align="center">
                            <a class="detalle" href="#">
                                <span class="boton2 btn-editar" style="font-size:.9em" onclick='llamarVistaParcial("@item.Id_Solicitud.ToString()")' ;" data-toggle="modal" data-target="#myModal_Detalle">
                                    <span class="glyphicon glyphicon-info-sign">  </span>
                                </span>
                            </a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</form>
